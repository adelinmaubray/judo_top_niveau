<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    tools:context="niveau.top.judo.jtn.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <View
            android:layout_width="@dimen/sizeTitle"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/ippon_rouge"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/ippon_txt"
            android:layout_width="@dimen/spaceTitle"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sizeMargin"
            android:gravity="center"
            android:text="@string/ippon"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="@dimen/sizeTitle"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/wazaari_txt"
            android:layout_width="@dimen/spaceTitle"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/wazaari"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sizeTitle"
            android:textStyle="bold"
            android:layout_margin="@dimen/sizeMargin"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/wazaari_blanc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:text="@string/score_init"
            android:textColor="@color/white"
            android:textSize="@dimen/sizeScore"
            android:onClick="wazaari_blanc"
            android:layout_margin="@dimen/sizeMargin"
            android:layout_below="@id/wazaari_txt"
            android:layout_alignEnd="@id/wazaari_txt"
            android:layout_alignStart="@id/wazaari_txt"
            />

        <Button
            android:id="@+id/wazaari_rouge"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:text="@string/score_init"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sizeScore"
            android:onClick="wazaari_rouge"
            android:layout_margin="@dimen/sizeMargin"
            android:layout_below="@id/wazaari_blanc"
            android:layout_alignEnd="@id/wazaari_txt"
            android:layout_alignStart="@id/wazaari_txt"
            />

        <Button
            android:id="@+id/ippon_blanc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:text="@string/score_init"
            android:textColor="@color/white"
            android:textSize="@dimen/sizeScore"
            android:onClick="ippon_blanc"
            android:layout_margin="@dimen/sizeMargin"
            android:layout_below="@id/ippon_txt"
            android:layout_alignEnd="@id/ippon_txt"
            android:layout_alignStart="@id/ippon_txt"
            />

        <Button
            android:id="@+id/ippon_rouge"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:text="@string/score_init"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sizeScore"
            android:onClick="ippon_rouge"
            android:layout_margin="@dimen/sizeMargin"
            android:layout_below="@id/ippon_blanc"
            android:layout_alignEnd="@id/ippon_txt"
            android:layout_alignStart="@id/ippon_txt"
            />

        <Button
            android:id="@+id/chrono_sol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="setChronoSol"
            android:text="0:30"
            android:textSize="@dimen/sizeChrono"
            android:layout_below="@+id/ippon_rouge"
            android:layout_alignEnd="@id/wazaari_txt"
            />

        <Button
            android:id="@+id/reset_sol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/chrono_sol"
            android:layout_below="@+id/chrono_sol"
            android:layout_margin="@dimen/sizeMargin"
            android:background="@null"
            android:onClick="resetSol"
            android:text="@string/reset"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sizeText" />

        <ImageButton
            android:id="@+id/plus_ou_moins"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:background="@drawable/minus"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/sizeMargin"
            android:onClick="changePlusOuMoins"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <View
            android:layout_width="@dimen/sizeTitle"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/koka_rouge"/>

        <TextView
            android:id="@+id/yuko_txt"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/spaceTitle"
            android:gravity="center"
            android:text="@string/yuko"
            android:textSize="@dimen/sizeTitle"
            android:layout_margin="@dimen/sizeMargin"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/koka_txt"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/spaceTitle"
            android:gravity="center"
            android:textSize="@dimen/sizeTitle"
            android:layout_margin="@dimen/sizeMargin"
            android:text="@string/koka"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentEnd="true"
            />

        <Button
            android:id="@+id/koka_blanc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:text="@string/score_init"
            android:textColor="@color/white"
            android:textSize="@dimen/sizeScore"
            android:onClick="koka_blanc"
            android:layout_margin="@dimen/sizeMargin"
            android:layout_below="@id/koka_txt"
            android:layout_alignStart="@id/koka_txt"
            android:layout_alignEnd="@id/koka_txt"

            />

        <Button
            android:id="@+id/koka_rouge"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:text="@string/score_init"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sizeScore"
            android:onClick="koka_rouge"
            android:layout_margin="@dimen/sizeMargin"
            android:layout_below="@id/koka_blanc"
            android:layout_alignEnd="@id/koka_txt"
            android:layout_alignStart="@id/koka_txt"

            />

        <Button
            android:id="@+id/yuko_blanc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:text="@string/score_init"
            android:textColor="@color/white"
            android:textSize="@dimen/sizeScore"
            android:onClick="yuko_blanc"
            android:layout_margin="@dimen/sizeMargin"
            android:layout_below="@id/yuko_txt"
            android:layout_alignEnd="@id/yuko_txt"
            android:layout_alignStart="@id/yuko_txt"
            />

        <Button
            android:id="@+id/yuko_rouge"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:text="@string/score_init"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sizeScore"
            android:onClick="yuko_rouge"
            android:layout_margin="@dimen/sizeMargin"
            android:layout_below="@id/yuko_blanc"
            android:layout_alignEnd="@id/yuko_txt"
            android:layout_alignStart="@id/yuko_txt"
            />

        <Button
            android:id="@+id/chrono_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="1:00"
            android:textSize="@dimen/sizeChrono"
            android:onClick="setChronoGeneral"
            android:layout_below="@id/yuko_rouge"
            android:layout_alignStart="@id/yuko_txt"
            />

        <Button
            android:id="@+id/reset_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/chrono_general"
            android:layout_below="@+id/chrono_general"
            android:background="@null"
            android:onClick="resetGeneral"
            android:text="@string/reset"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sizeText"
            android:layout_margin="@dimen/sizeMargin"/>

        <ImageButton
            android:id="@+id/param"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:background="@drawable/params"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/sizeMargin"
            android:onClick="goToParam"
            />

    </RelativeLayout>

</LinearLayout>
